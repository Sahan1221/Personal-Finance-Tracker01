# -----------------------------
# BASIC SERVER CONFIG
# -----------------------------
PORT=5000

# -----------------------------
# DATABASE CONNECTION
# -----------------------------
# If using local MongoDB
MONGO_URI=mongodb://127.0.0.1:27017/finance-tracker

# If using MongoDB Atlas, paste your connection string instead:
# MONGO_URI=mongodb+srv://USERNAME:PASSWORD@cluster0.abcde.mongodb.net/finance-tracker

# -----------------------------
# SESSION CONFIG
# -----------------------------
SESSION_SECRET=this_should_be_a_long_random_string
SESSION_NAME=finance.sid
SESSION_LIFETIME=86400000   # 1 day in milliseconds

# -----------------------------
# ENVIRONMENT
# -----------------------------
NODE_ENV=development

# -----------------------------
# FRONTEND URL (React)
# This must match your React app URL
# -----------------------------
FRONTEND_ORIGIN=http://localhost:3000
